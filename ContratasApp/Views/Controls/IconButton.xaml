<?xml version="1.0" encoding="utf-8"?>

<ContentPage 
    x:Class="ContratasApp.Views.Controls.IconButton"
    x:Name="this"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Border
        StrokeShape="RoundRectangle 8"
        BackgroundColor="Transparent"
        StrokeThickness="0"
        Padding="8">
        <Label
            Text="{Binding Icon, Source={x:Reference this}}"
            FontFamily="FASolid"
            FontSize="24"
            TextColor="{Binding IconColor, Source={x:Reference this}}"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding Command, Source={x:Reference this}}"
                    CommandParameter="{Binding CommandParameter, Source={x:Reference this}}"
                    Tapped="OnTappedInternal" />
            </Label.GestureRecognizers>
        </Label>
    </Border>
</ContentPage>