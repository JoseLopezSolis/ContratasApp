<?xml version="1.0" encoding="utf-8"?>

<base:BasePage 
    xmlns:base ="clr-namespace:ContratasApp.Views.Base"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ContratasApp.Views.AddClientPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Done"
                     Priority="1"
                     Order="Primary"
                     IsEnabled="False"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <Image
            Margin="0,20"
            Source="client.png"
            WidthRequest="120"
            HeightRequest="120"/>
       <Button
           Text="Add Photo"
           WidthRequest="150"
           Margin="0,20"
           BackgroundColor="Transparent"
           TextColor="{StaticResource Black}"
           FontAttributes="Bold"
           />
       
           <Entry
               Placeholder="Name"
               FontSize="12"
           />
        
           <Entry
               Placeholder="Apellidos"
               FontSize="12"
               />
               
           <Entry
               Placeholder="Numero celular"
               FontSize="12"
               />
        
        <Picker Title="Select Gender" x:Name="GenderPicker">
            <Picker.Items>
                <x:String>Male</x:String>
                <x:String>Female</x:String>
                <x:String>Other</x:String>
                <x:String>Prefer not to say</x:String>
            </Picker.Items>
        </Picker>
      
        
        <Picker Title="Select Payment Method" x:Name="PaymentPicker">
            <Picker.Items>
                <x:String>Cash</x:String>
                <x:String>Card</x:String>
            </Picker.Items>
        </Picker>
       
    </VerticalStackLayout>
    
</base:BasePage>