<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ContratasApp.Views.Popups.ClientDetailPopup"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <Grid
        RowDefinitions="Auto,*,Auto"
        ColumnDefinitions="*"
        Background="White"
        HeightRequest="300"
        WidthRequest="300"
        Padding="20">
        
        <Label
            Grid.Row="0"
            x:Name="welcomeMessage"
            FontSize="20"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            Margin="0,20"/>
        
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            RowDefinitions="Auto, Auto, Auto, Auto"
            ColumnDefinitions="Auto, Auto"
            ColumnSpacing="5"
            RowSpacing="10">
            
            <Label
                Grid.Row="0"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Telefono:"/>
            <Label
                x:Name="phone"
                Text="{Binding Client.phone}"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalTextAlignment="End"
                TextDecorations="Underline"/>
            
            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Forma de pago:"/>
            <Label
                x:Name="methodOfPayment"
                Text="{Binding Client.PaymentMethod}"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalTextAlignment="End"/>
            
            <Label
                Grid.Row="2"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Email"/>
            <Label
                x:Name="email"
                Text="{Binding Client.Email}"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalTextAlignment="End"/>
            
            <Label
                Grid.Row="3"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Contratas activas"/>
            
            <Label
                x:Name="loanCount"
                Text="{Binding Client.ContractsCount}"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalTextAlignment="End"/>
        </Grid>
        
        
        <Button
            Grid.Row="2"
            Text="Cerrar"
            Clicked="OnOKButtonClicked"
            Background="{StaticResource Black}"
            />
    </Grid>
    
</toolkit:Popup>