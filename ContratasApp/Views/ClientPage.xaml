<?xml version="1.0" encoding="utf-8"?>

<base:BasePage 
    xmlns:base ="clr-namespace:ContratasApp.Views.Base"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ContratasApp.ViewModels"
    xmlns:models="clr-namespace:ContratasApp.Models"
    x:DataType="vm:ClientPageViewModel"
    x:Class="ContratasApp.Views.ClientPage">
    <ScrollView>
        <VerticalStackLayout 
            Padding="20" 
            Spacing="20">
            <!-- Foto -->
            <Border WidthRequest="120" HeightRequest="120">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="60" />
                </Border.StrokeShape>
                <Image 
                    Source="{Binding Client.ImagePath}"
                    Aspect="AspectFill" />
            </Border>

            <!-- Datos -->
            <Label 
                Text="{Binding Client.Name}"
                Style="{StaticResource TitleLabelStyle}" />
            <Label 
                Text="{Binding Client.Email}"
                Style="{StaticResource SubtitleLabelStyle}" />
            <Label 
                Text="{Binding Client.Phone}"
                Style="{StaticResource SubtitleLabelStyle}" />
            <Label 
                Text="{Binding Client.PaymentMethod}"
                Style="{StaticResource SubtitleLabelStyle}" />
            
            <Button
                Text="Agregar Contrata"
                Command="{Binding CreateContractCommand}"
                CommandParameter="{Binding Client}"
                HorizontalOptions="Center"
                Margin="0,20,0,0" />
            
            <CollectionView
                ItemsSource="{Binding Contracts}"
                EmptyView="Este cliente no tiene préstamos"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding NavigateToContractDetailCommand}"
                SelectionChangedCommandParameter="{Binding SelectedItem}"
                VerticalOptions="FillAndExpand">

                <CollectionView.ItemTemplate>
                    <DataTemplate 
                        x:DataType="models:LoanContract">
                        <Border Padding="12" Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                <!-- Monto -->
                                <Label
                                    Grid.Row="0" Grid.Column="0"
                                    Text="{Binding Principal, StringFormat='{}{0:C0}'}"
                                    Style="{StaticResource TitleLabelStyle}" />
                                <!-- Fecha de inicio -->
                                <Label
                                    Grid.Row="0" Grid.Column="1"
                                    Text="{Binding StartDate, StringFormat='{0:dd/MM/yyyy}'}"
                                    Style="{StaticResource SubtitleLabelStyle}"
                                    HorizontalOptions="End" />

                                <!-- Tipo de préstamo -->
                                <Label
                                    Grid.Row="1" Grid.Column="0"
                                    Text="{Binding Type}"
                                    Style="{StaticResource SubtitleLabelStyle}" />
                                <!-- Estado -->
                                <Label
                                    Grid.Row="1" Grid.Column="1"
                                    Text="{Binding IsClosed}"
                                    Style="{StaticResource SubtitleLabelStyle}"
                                    HorizontalOptions="End" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </VerticalStackLayout>
    </ScrollView>
</base:BasePage>