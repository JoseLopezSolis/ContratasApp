<?xml version="1.0" encoding="utf-8"?>

<base:BasePage 
    xmlns:base="clr-namespace:ContratasApp.Views.Base"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syst="clr-namespace:System;assembly=System.Runtime"
    xmlns:vm="clr-namespace:ContratasApp.ViewModels"
    xmlns:behaviors="clr-namespace:ContratasApp.Behavior"
    xmlns:converters="clr-namespace:ContratasApp.Converters"
    x:DataType="vm:AddContractPageViewModel"
    x:Class="ContratasApp.Views.AddContractPage">
    
    <base:BasePage.Resources>
        <converters:LoanTypeToSpanishConverter 
            x:Key="LoanTypeToSpanishConverter" />
    </base:BasePage.Resources>
    <Grid
        RowDefinitions="Auto, Auto, Auto, Auto, Auto, *"
        ColumnDefinitions="*, *"
        RowSpacing="15"
        ColumnSpacing="10"
        Padding="25, 10">
        <Label 
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Text="Agrega los detalles del prestamo"
            FontSize="20"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,20, 0,50"/>
        
            <Label
                Grid.Row="1"
                Grid.Column="0"
                FontAttributes="Bold"
                Text="Monto a prestar"
                Margin="0"/>
        
            <Entry
                Grid.Row="2"
                Grid.Column="0"
                HorizontalTextAlignment="Start"
                Keyboard="Numeric"
                Placeholder="$0.00"
                Margin="0"
                Text="{Binding Amount, Mode=TwoWay}"/>
        
            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontAttributes="Bold"
                Text="Tipo de prÃ©stamo"
                Style="{StaticResource SubtitleLabelStyle}" />
        
            <Picker
                Grid.Row="2"
                Grid.Column="1"
                Title="Seleccione tipo"
                ItemsSource="{Binding LoanTypes}"
                SelectedItem="{Binding SelectedLoanType}">
                <Picker.ItemDisplayBinding>
                    <Binding
                        Converter="{StaticResource LoanTypeToSpanishConverter}" />
                </Picker.ItemDisplayBinding>
            </Picker>
        
            <Label
                Grid.Row="3"
                Text="Fecha de inicio (opcional)"
                FontAttributes="Bold"
                Style="{StaticResource SubtitleLabelStyle}" />
        
            <DatePicker
                Grid.Row="4"
                Date="{Binding StartDate}"
                MaximumDate="{x:Static syst:DateTime.Today}" />
        
            <Button
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Text="Agregar"
                HeightRequest="50"
                BackgroundColor="Black"
                TextColor="White"
                FontAttributes="Bold"
                Command="{Binding SaveCommand}"/>
        
    </Grid>
</base:BasePage >